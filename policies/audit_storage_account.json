{
  "properties": {
    "displayName": "Testing Audit Storage account with public access policy",
    "policyType": "Custom",
    "mode": "All",
    "description": "Testing Audit Storage account with public access policy",
    "metadata": {
      "version": "1.0.0",
      "category": "General"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "field": "Microsoft.Storage/storageAccounts/networkAcls.defaultAction",
            "notequals": "Deny"
          }
        ]
      },
      "then": {
        "effect": "audit"
      }
    }
  },
  "id": "/providers/Microsoft.Management/managementGroups/Guardrails/providers/Microsoft.Authorization/policyDefinitions/281dd069-4aee-4e69-9eb6-bd69f4249080",
